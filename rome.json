{
  "formatter": {
    "enabled": true, 
    "lineWidth": 80,
    "indentSize": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "trailingComma": "none"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["node_modules"],
    "rules": {
      "recommended": true
    }
  }
}